<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rulo.themoviedbapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tmdb"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_tmdb"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheMovieDBApp">
        <activity android:name=".peliculas.listasPeliculas.view.ItemPeliculaView"/>
        <activity android:name=".series.listasSeries.view.ItemSerieView" />
        <activity android:name=".series.listasSeries.view.SeriesView" />
        <activity android:name=".login.view.LoginView" />
        <activity android:name=".peliculas.listasPeliculas.view.PeliculasView" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>